<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteMaker" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/drawer_gray</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.ToolBar" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="NavigationView">
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="android:listDivider">@color/drawer_top</item>
    </style>

    <style name="Login.Theme.View" parent="@android:style/Widget.Material.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>

        <item name="android:background">@drawable/rounded_view</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="Login.Theme.Button" parent="@android:style/Widget.Material.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_view</item>

        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

</resources>